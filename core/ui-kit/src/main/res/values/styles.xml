<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text -->
    <!-- Titles -->
    <style name="Title1">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="Title2">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="Title3">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="Title4">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <!-- Body Text -->
    <style name="Text1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Button Text -->
    <style name="ButtonText1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="ButtonText2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Additional Styles -->
    <style name="TabText">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Number">
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Buttons -->
    <!-- Blue button  -->
    <style name="BlueButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/ButtonText1</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Green button  -->
    <style name="GreenButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/ButtonText2</item>
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Blue short button  -->
    <style name="BlueShortButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/ButtonText2</item>
        <item name="android:background">@drawable/bg_btn_blue_short</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- CardView  -->
    <!-- Light  -->
    <style name="CardViewLight" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Dark -->
    <style name="CardViewDark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/grey_1</item>
    </style>

</resources>